@*
    Employee
*@﻿﻿
@model List<Employee>
<form asp-controller="Employee" asp-action="Create" method="post">
    <button type="submit" class="btn btn-success">Create</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">CreatedDate</th>
            <th scope="col">UpdatedDate</th>
            <th scope="col">Activeness</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <th scope="row">@employee.Id</th>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Position</td>
                <td>@employee.Description</td>
                <td>@employee.ImageName</td>
                <td><img src="@employee.ImageURL" /></td>
                <td>@employee.CreatedDate</td>
                <td>@employee.UpdatedDate</td>
                <td>
                    @if (employee.IsDeleted)
                    {
                        <span class="badge bg-danger">Deleted</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a>
                    <form asp-area="admin" asp-controller="employee" asp-action="delete" method="post" asp-route-id="@employee.Id">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                   

                </td>
            </tr>
        }
    </tbody>
</table>