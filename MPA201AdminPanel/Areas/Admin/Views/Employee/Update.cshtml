﻿
@model Employee

<form asp-area="Admin" asp-controller="blog" asp-action="update" method="post" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.FirstName">Name</label>
        <input asp-for="@Model.FirstName" placeholder="Enter title">

    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName">Price</label>
        <input asp-for="@Model.LastName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Position">ImageName</label>
        <input asp-for="@Model.Position" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description">ImageName</label>
        <input asp-for="@Model.Description" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.ImageName">ImageName</label>
        <input asp-for="@Model.ImageName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.ImageURL">ImageUrl</label>
        <input asp-for="@Model.ImageURL" class="form-control">
    </div>
    <a asp-area="admin" asp-controller="blog" asp-action="index">Cancel</a>
    <button type="submit" class="btn btn-primary">Update</button>
</form>